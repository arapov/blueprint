{{define "title"}}Roster{{end}}
{{define "head"}}{{end}}
{{define "content" -}}

<div id="roster">
    <!-- Cloud -->
    <!-- div v-if="groups.length > 1" class="page-header text-center text-lowercase">
        <a v-for="group in orderedGroups" :href="'#' + group.cn[0]" class="btn btn-sm btn-link">${ group.description[0] }</a>
    </div -->

    <div class="container">
        <div class="row">

            <!-- navigation bar -->
            <div class="col-2 my-3">
                <div id="toc" class="list-group sticky">
                    <a v-for="group in orderedGroups" :href="'#' + group.cn[0]" class="list-group-item list-group-item-action">${ group.description[0] }</a>
                </div>
            </div>

            <!-- content -->
            <div class="col-10">

                <!-- spinner -->
                <div v-if="!ready" class="card my-3">
                    <div class="card-header">Roster is loading...</div>
                    <div class="card-body mx-auto"><i class="fas fa-spinner fa-5x fa-spin"></i></div>
                </div>

                <!-- cards -->
                <div v-if="ready" v-for="group in orderedGroups" class="card my-3">

                    <!-- card header -->
                    <div class="card-header font-weight-bold py-2" :id="group.cn[0]">
                        <span class="text-capitalize">${ group.description[0] }</span>

                        <!-- card header actions -->
                        <span class="float-right">
                            <span v-if="groups.length > 1" class="mr-2" title="Open in new window.">
                                <a :href="'/roster/' + group.cn[0] " target="_blank" class="card-link">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </span>
                            <span class="dropdown" title="Actions...">
                                <a class="btn btn-link btn-sm dropdown-toggle p-0" href="#" role="button" data-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                                <span class="dropdown-menu">
                                    <a class="dropdown-item" :href="'https://rover.redhat.com/groups/group/' + group.cn[0] ">Edit</a>
                                </span>
                            </span>
                        </span>

                        <!-- card header stats -->
                        <span class="card-stats float-right mr-4">
                            <span v-if="group.subGroup.length > 0" class="mr-1" title="Number of subgroups.">
                                <i class="fas fa-users"></i><strong>&nbsp;${ group.subGroup.length }</strong>
                            </span>
                            <span v-if="group.uniqueMember.length > 0" title="Number of people in the group.">
                                <i class="fas fa-user"></i><strong>&nbsp;${ group.uniqueMember.length }</strong>
                            </span>
                        </span>
                    </div>
                    <!-- /card header -->

                    <!-- card body -->
                    <div class="card-body">
                        <div class="container">
                            <div class="row">

                                <!-- card body links -->
                                <div class="col-2">
                                    <ul class="list-unstyled">
                                        <li>link1</li>
                                        <li>link2</li>
                                        <li>link3</li>
                                    </ul>
                                </div>

                                <!-- card body governance -->
                                <div class="col-10">
                                    <ul class="row list-unstyled">
                                        <li v-for="role in group.roles" v-if="group[role].length > 0" class="list-item col-6">
                                            <span class="font-weight-bold">
                                                ${role}<span v-if="group[role].length > 1">s</span>
                                            </span>:
                                            <a :href="'https://rover.redhat.com/people/profile/' + man.split(',')[0]" v-for="man in group[role]" class="comma">${ man.split(',')[1] }</a>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /card body -->

                    <button class="btn btn-link btn-sm">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
                <!-- /cards -->
            </div>
            <!-- /content -->

        </div>
    </div>
</div>

<script type="text/javascript">
let roster = new Vue({
    el: '#roster',
    delimiters: ['${','}'],
    data: {
        groups: [
            {   cn: [],
                description: [],
                subGroup: [],
                uniqueMember: [],
            },
        ],
        ready: false,
    },
    computed: {
        orderedGroups() {
            return _.sortBy(this.groups, 'cn')
        },
    },
    async mounted() {
        await this.$http.get('/api/v1/roster/groups/' + {{.group}} ).then(response => {
            this.groups = response.body.data;
        }, response => {
            this.groups = [{
                    "cn": [response.body.errors[0].title],
                    "description": ["Error: " + response.body.errors[0].title],
                    subGroup: [],
                    uniqueMember: [],
                }];
        });
        this.ready = true;
    },
});
</script>
