{{define "content" -}}

<div id="roster">

    <div v-for="group in groups" class="card my-2">

        <div class="card-header">
            <span>${ group.description[0] }</span>

            <!-- card actions -->
            <div class="float-right">
                <span class="mr-2"><a :href="'/roster/' + group.cn[0] " target="_blank" class="card-link"><i class="fas fa-external-link-alt"></i></a></span>
                <span class="dropdown">
                    <a class="btn btn-link btn-sm dropdown-toggle p-0" href="#" role="button" data-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" :href="'https://rover.redhat.com/groups/group/' + group.cn[0] ">Edit</a>
                    </div>
                </span>
            </div>
        </div>

        <div class="card-body">
            TODO: content
        </div>
    </div>

</div>

<script type="text/javascript">
let roster = new Vue({
    el: '#roster',
    delimiters: ['${','}'],
    data: {
        groups: [
            { cn: [], description: [], },
        ],
    },
    async mounted() {
        this.groups = (await this.$http.get('/api/v1/roster/groups/' + {{.group}} )).body.data;
    },
});
</script>
