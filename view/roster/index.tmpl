<script type="text/javascript">
let roster = new Vue({
    el: '#roster',
    delimiters: ['${','}'],
    data: {
        groups: [
            { cn: [], description: [], },
        ],
    },
    async mounted() {
        this.groups = (await this.$http.get('/api/v1/roster/groups/' + {{.group}} )).body.data;
    },
});
</script>
